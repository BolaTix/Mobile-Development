<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:elevation="0.5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="fitCenter"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/av_demi"
                android:text="11 Januari 2025 | 16:00 WIB"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homeLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <TextView
                    android:id="@+id/homeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="12.5sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/av_bold"
                    android:text="Munchen"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_vs"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/awayLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <TextView
                    android:id="@+id/awayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="12.5sp"
                    android:fontFamily="@font/av_bold"
                    android:text="Munchen"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuyTicket"
                style="@style/StyleButton1"
                android:layout_width="fill_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_blue"
                android:fontFamily="@font/av_demi"
                android:text="BELI SEKARANG"
                android:textSize="12sp"
                tools:ignore="HardcodedText,SmallSp,TouchTargetSizeCheck,VisualLintButtonSize" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>